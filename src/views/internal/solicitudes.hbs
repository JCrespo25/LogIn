                                <td>{{contactoCorreo}}</td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </div>
            <!-- ////////////////////////////////////////////////////MODAL PASO 1/////////////////////////////////////////////////////////////// -->
            <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-content">
                            <!-- /////////////HEADER MODAL/////////// -->
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Paso 1: Confirmación</h5>
                                <div class="menu-header">

                                    <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="tooltip" data-placement="left" title="Editar"><i class="far fa-edit"></i></button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal" data-toggle="tooltip" data-placement="left" title="Eliminar"><i class="fas fa-trash"></i></button>
                                    <button type="button" class="btn-exit" data-dismiss="modal" data-toggle="tooltip" data-placement="left" title="Bloquear usuario"><i class="fas fa-times"></i></button>
                                </div>
                            </div>
                            <!-- ////////////////////////BODY MODAL////////////////////////// -->
                            <div class="modal-body1">
                                <h5 class="tittle-empresa">Empresa</h5>
                                <div class="company-box"><input type="text" class="form-control" id="disabledInput" placeholder="{{empresaName}}" disabled></div>
                                <div class="trade-box"><input type="text" class="form-control" id="disabledInput" placeholder="{{empresaTradeName}}" disabled></div>
                                <h5 class="tittle-representante">Representante</h5>
                                <div class="name-box"><input type="text" class="form-control" id="disabledInput" placeholder="{{representanteName}}" disabled></div>
                                <div class="Lname-box"><input type="text" class="form-control" id="disabledInput" placeholder="{{representanteApPaterno}}" disabled></div>
                                <div class="Lscndname-box"><input type="text" class="form-control" id="disabledInput" placeholder="{{representanteApMaterno}}" disabled></div>
                                <h5 class="title-contacto">Contacto</h5>
                                <div class="phone-box"><input type="text" class="form-control" id="disabledInput" placeholder="{{contactoNumberFijo}}" disabled></div>
                                <div class="cellphone-box"><input type="text" class="form-control" id="disabledInput" placeholder="{{contactoCelular}}" disabled></div>
                                <div class="mail-box"><input type="text" class="form-control" id="disabledInput" placeholder="{{contactoCorreo}}" disabled></div>
                            </div>
                            <!-- //////////////////////////////FOOTER MODAL////////////////////////////////////////// -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal" data-toggle="tooltip" data-placement="left" title="Mail"><i class="fas fa-envelope"></i></button>
                                <button type="button" class="btn btn-success" data-dismiss="modal">Restablecer<i class="fas fa-window-restore"></i></button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="input" data-toggle="modal" data-target=".bd-example-modal-lg2">Siguiente<i class="fas fa-arrow-circle-right"></i></button>

                            </div>

                        </div>
                    </div>
                </div>


            </div>
