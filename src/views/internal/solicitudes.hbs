                    <table class="table">
                        <thead class="table-primary">
                            <tr>
                                <th scope="col">IDe</th>
                                <th scope="col">IDa</th>
                                <th scope="col">Empresa</th>
                                <th scope="col">Representante</th>
                                <th scope="col">Correo</th>
                            </tr>
                        </thead>
                        {{#each solicitantes}}
                        <tbody class="table-active">
                            <tr onclick="input" data-toggle="modal" data-target=".bd-example-modal-lg">
